<Window x:Class="assignment1.ReserveMovie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment1"
        mc:Ignorable="d"
        Title="ReserveMovie" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Enter Movie ID:" Margin="0,0,0,5"/>
        <TextBox x:Name="MovieIdTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Your Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>
        <Button Content="Reserve" Click="Reserve_Click"/>
    </StackPanel>
</Window>
